generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id            String    @id @default(uuid())
  password      String
  email         String    @unique
  name          String
  image         String? 
  adminRole     Boolean         @default(false)
  createdAt     DateTime        @default(now())
  updateAt      DateTime        @updatedAt
}

model VideoGameProduct {
  id            String      @id @default(uuid())
  title         String
  description   String
  genre         String
  platform      String
  playerCount   Int
  releaseDate   DateTime
  price         Float
  publisher     String
  developer     String
  rating        Float
  coverImageUrl String?
  trailerUrl    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
